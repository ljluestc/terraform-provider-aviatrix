# =============================================================================
# Terraform Provider Aviatrix - Test Environment Configuration
# =============================================================================
# Copy this file to .env.test and fill in your credentials
# Source: source .env.test
# =============================================================================

# =============================================================================
# Core Test Configuration
# =============================================================================
# Set to 1 to enable Terraform acceptance tests
TF_ACC=1

# Test timeout (default: 30m)
GO_TEST_TIMEOUT=30m

# Test artifact directory (default: ./test-results)
TEST_ARTIFACT_DIR=./test-results

# Test data directory (default: ./test-data)
TEST_DATA_DIR=./test-data

# Enable parallel test execution (default: true)
ENABLE_PARALLEL_TESTS=true

# Enable detailed test logs (default: false)
ENABLE_DETAILED_LOGS=false

# Maximum number of parallel tests
GOMAXPROCS=4

# =============================================================================
# Aviatrix Controller Configuration
# =============================================================================
# REQUIRED for all acceptance and integration tests
AVIATRIX_CONTROLLER_IP=
AVIATRIX_USERNAME=
AVIATRIX_PASSWORD=

# =============================================================================
# AWS Configuration
# =============================================================================
# Skip AWS tests (set to "yes" to skip)
SKIP_ACCOUNT_AWS=

# Required AWS credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_NUMBER=

# Optional AWS test configuration
AWS_TEST_REGION=us-east-1
AWS_TEST_VPC_CIDR=10.0.0.0/16
AWS_TEST_SUBNET_CIDR=10.0.1.0/24
AWS_TEST_INSTANCE_TYPE=t3.medium

# =============================================================================
# Azure Configuration
# =============================================================================
# Skip Azure tests (set to "yes" to skip)
SKIP_ACCOUNT_AZURE=

# Required Azure credentials
ARM_CLIENT_ID=
ARM_CLIENT_SECRET=
ARM_SUBSCRIPTION_ID=
ARM_TENANT_ID=

# Optional Azure test configuration
AZURE_TEST_REGION=East US
AZURE_TEST_VNET_CIDR=10.1.0.0/16
AZURE_TEST_SUBNET_CIDR=10.1.1.0/24
AZURE_TEST_VM_SIZE=Standard_B2s

# =============================================================================
# GCP Configuration
# =============================================================================
# Skip GCP tests (set to "yes" to skip)
SKIP_ACCOUNT_GCP=

# Required GCP credentials
# Path to the service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_PROJECT=

# Optional GCP test configuration
GCP_TEST_REGION=us-central1
GCP_TEST_VPC_CIDR=10.2.0.0/16
GCP_TEST_SUBNET_CIDR=10.2.1.0/24
GCP_TEST_MACHINE_TYPE=n1-standard-2

# =============================================================================
# OCI (Oracle Cloud Infrastructure) Configuration
# =============================================================================
# Skip OCI tests (set to "yes" to skip)
SKIP_ACCOUNT_OCI=

# Required OCI credentials
OCI_USER_ID=
OCI_TENANCY_ID=
OCI_FINGERPRINT=
OCI_PRIVATE_KEY_PATH=
OCI_REGION=

# Optional OCI test configuration
OCI_TEST_REGION=us-ashburn-1
OCI_TEST_VCN_CIDR=10.3.0.0/16
OCI_TEST_SUBNET_CIDR=10.3.1.0/24
OCI_TEST_INSTANCE_SHAPE=VM.Standard2.1

# =============================================================================
# Test Resource Naming
# =============================================================================
# Prefix for test resources (default: tf-test)
TEST_RESOURCE_PREFIX=tf-test

# Suffix for test resources (optional)
TEST_RESOURCE_SUFFIX=

# =============================================================================
# CI/CD Configuration
# =============================================================================
# Set automatically by GitHub Actions
# CI=true
# GITHUB_ACTIONS=true
# GITHUB_WORKFLOW=
# GITHUB_RUN_ID=
# RUNNER_OS=

# =============================================================================
# Docker Test Configuration
# =============================================================================
# Enable Docker tests (set to 1 to run Docker-specific tests)
RUN_DOCKER_TESTS=

# =============================================================================
# Advanced Test Configuration
# =============================================================================
# Skip CID expiry tests (set to "yes" to skip)
SKIP_CID_EXPIRY=

# Enable screenshots for UI tests (default: false)
ENABLE_SCREENSHOTS=false

# Provider version validation skip
# SKIP_VERSION_VALIDATION=
