# Terraform Provider Aviatrix - Test Environment Configuration
# Copy this file to .env.test and fill in your actual values

# ============================================================================
# TEST CONFIGURATION
# ============================================================================

# Test execution settings
TF_ACC=1                                    # Enable Terraform acceptance tests
GO_TEST_TIMEOUT=30m                         # Default test timeout
GOMAXPROCS=4                                # Number of CPU cores for tests

# Test artifact settings
TEST_ARTIFACT_DIR=./test-results            # Directory for test results and artifacts
TEST_DATA_DIR=./test-data                   # Directory for test data files
ENABLE_PARALLEL_TESTS=true                  # Enable parallel test execution
ENABLE_DETAILED_LOGS=false                  # Enable detailed test logging
ENABLE_SCREENSHOTS=false                    # Enable screenshot capture on failures

# Resource naming
TEST_RESOURCE_PREFIX=tf-test                # Prefix for test resource names
TEST_RESOURCE_SUFFIX=                       # Optional suffix for test resource names

# ============================================================================
# CLOUD PROVIDER SKIP FLAGS
# ============================================================================

SKIP_ACCOUNT_AWS=no                         # Set to 'yes' to skip AWS tests
SKIP_ACCOUNT_AZURE=no                       # Set to 'yes' to skip Azure tests
SKIP_ACCOUNT_GCP=no                         # Set to 'yes' to skip GCP tests
SKIP_ACCOUNT_OCI=no                         # Set to 'yes' to skip OCI tests

# ============================================================================
# AVIATRIX CONTROLLER CREDENTIALS
# ============================================================================

AVIATRIX_CONTROLLER_IP=                     # Required: Controller IP address
AVIATRIX_USERNAME=                          # Required: Controller username
AVIATRIX_PASSWORD=                          # Required: Controller password

# ============================================================================
# AWS CREDENTIALS AND CONFIGURATION
# ============================================================================

# AWS Authentication
AWS_ACCESS_KEY_ID=                          # AWS Access Key ID
AWS_SECRET_ACCESS_KEY=                      # AWS Secret Access Key
AWS_DEFAULT_REGION=us-east-1                # Default AWS region
AWS_ACCOUNT_NUMBER=                         # AWS Account Number

# AWS Test Configuration
AWS_TEST_REGION=us-east-1                   # Region for AWS tests
AWS_TEST_VPC_CIDR=10.0.0.0/16              # VPC CIDR for AWS tests
AWS_TEST_SUBNET_CIDR=10.0.1.0/24           # Subnet CIDR for AWS tests
AWS_TEST_INSTANCE_TYPE=t3.medium            # Instance type for AWS tests

# ============================================================================
# AZURE CREDENTIALS AND CONFIGURATION
# ============================================================================

# Azure Authentication (Service Principal)
ARM_CLIENT_ID=                              # Azure Client ID (Application ID)
ARM_CLIENT_SECRET=                          # Azure Client Secret
ARM_SUBSCRIPTION_ID=                        # Azure Subscription ID
ARM_TENANT_ID=                              # Azure Tenant ID

# Azure Test Configuration
AZURE_TEST_REGION=East US                   # Region for Azure tests
AZURE_TEST_VNET_CIDR=10.1.0.0/16           # VNet CIDR for Azure tests
AZURE_TEST_SUBNET_CIDR=10.1.1.0/24         # Subnet CIDR for Azure tests
AZURE_TEST_VM_SIZE=Standard_B2s             # VM size for Azure tests

# ============================================================================
# GCP CREDENTIALS AND CONFIGURATION
# ============================================================================

# GCP Authentication
GOOGLE_APPLICATION_CREDENTIALS=             # Path to GCP credentials JSON file
GOOGLE_PROJECT=                             # GCP Project ID

# GCP Test Configuration
GCP_TEST_REGION=us-central1                 # Region for GCP tests
GCP_TEST_VPC_CIDR=10.2.0.0/16              # VPC CIDR for GCP tests
GCP_TEST_SUBNET_CIDR=10.2.1.0/24           # Subnet CIDR for GCP tests
GCP_TEST_MACHINE_TYPE=n1-standard-2         # Machine type for GCP tests

# ============================================================================
# OCI CREDENTIALS AND CONFIGURATION
# ============================================================================

# OCI Authentication
OCI_USER_ID=                                # OCI User OCID
OCI_TENANCY_ID=                             # OCI Tenancy OCID
OCI_FINGERPRINT=                            # OCI API Key Fingerprint
OCI_PRIVATE_KEY_PATH=                       # Path to OCI private key file
OCI_REGION=                                 # OCI Region (e.g., us-ashburn-1)

# OCI Test Configuration
OCI_TEST_REGION=us-ashburn-1                # Region for OCI tests
OCI_TEST_VCN_CIDR=10.3.0.0/16              # VCN CIDR for OCI tests
OCI_TEST_SUBNET_CIDR=10.3.1.0/24           # Subnet CIDR for OCI tests
OCI_TEST_INSTANCE_SHAPE=VM.Standard2.1      # Instance shape for OCI tests

# ============================================================================
# SPECIAL TEST CONFIGURATIONS
# ============================================================================

# Skip specific long-running tests
SKIP_CID_EXPIRY=yes                         # Skip CID expiry test (takes 1.5 hours)

# Additional test filters
TEST_FILTER=                                # Regex pattern to filter specific tests

# ============================================================================
# CI/CD SPECIFIC SETTINGS
# ============================================================================

# Used in CI/CD pipelines for better test organization
CI=false                                    # Set to 'true' when running in CI
GITHUB_ACTIONS=false                        # Set to 'true' when running in GitHub Actions
